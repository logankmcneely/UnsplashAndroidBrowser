<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center"
             android:background="@color/colorPrimaryDark"
             android:id="@+id/linearLayoutPhotoView">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="8dp"
            android:layout_margin="4dp"
            app:contentPadding="2dp" android:layout_gravity="center">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="12dp"
                    android:layout_weight="1">
                <ImageView
                        android:adjustViewBounds="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:transitionName="list_to_single"
                        app:srcCompat="@drawable/placeholder"
                        android:id="@+id/ivPhoto"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/photo_view_description"/>
            </android.support.v7.widget.CardView>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="top"
            >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tvUser"
                        tools:text="User"
                        android:layout_weight="0.5"
                        android:textStyle="bold"
                        android:gravity="top"
                        android:textSize="16sp"
                        android:layout_gravity="top"
                        android:fontFamily="@font/roboto_black"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tvCreatedAt"
                        tools:text="CreatedAt"
                        android:layout_weight="0.5"
                        android:textStyle="bold|italic"
                        android:textSize="12sp"
                        android:layout_gravity="top"
                        android:fontFamily="@font/roboto_italic" android:textAlignment="textEnd"/>
            </LinearLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDescription"
                    tools:text="Description"
                    android:layout_weight="0"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>